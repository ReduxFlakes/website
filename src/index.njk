{%- for post in collections.posts  | limit(1) -%}
  <section class="showcase-card">
    <h3 class="sc-heading">{{ post.data.title }}</h3>
    <div class="content stack" style="--spacer: 0.25em;">
      <p>
        <small>
          <time datetime="{{post.date}}">{{post.date | formatPostDate}}</time>
        </small>
      </p>
      {% if post.data.page.excerpt %}
        <p>{{ post.data.page.excerpt }}</p>
      {% else %}
        <p>{{ post.data.description }}</p>
      {% endif %}
      {{ component('link-button', {href: post.url, title: "Read more..." }) }}
    </p>
  </div>
</section>
{%- endfor -%}

<h2 id="updates" tabindex="-1">Updates <a href="#updates" class="header-anchor">#</a>
</h2>

<div class="carbon-scroller stack" style="--spacer: 0.5em;">

{%- for entry in updates -%}
  <div class="stack" style="--spacer: 0.5em;">
    {%- if loop.first -%}
      <time datetime="{{ entry.updateDate | dateToISO }}" style="font-weight:bold;color:var(--type-strong);">{{ entry.updateDate | formatStringDate }}</time>
    {%- else -%}
      <time datetime="{{ entry.updateDate | dateToISO }}">{{ entry.updateDate | formatStringDate }}</time>
    {%- endif -%}
    <p>{{ entry.content | safe }}</p>
    <hr>
  </div>
{%- endfor -%}

</div>

