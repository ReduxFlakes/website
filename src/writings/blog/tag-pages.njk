---

permalink: "blog/tag/{{ tag | slugify }}/"
pagination: 
    data: collections
    size: 1
    alias: tag
    addAllPagesToCollections: true
eleventyComputed:
    title: "Tagged with: {{ tag }}"
    eleventyNavigation:
        parent: Blog
        key: "{{ tag }}"
---

{% set taglist = collections[tag] | reverse %}
{% for post in taglist %}
    {{ component('post-listing', {title: post.data.title, date: post.date, description: post.data.description, href: post.url }) }}
{% endfor %}