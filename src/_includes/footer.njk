{% set navPages = collections.all | eleventyNavigation %}

{% set footerLinks = [] %}
{% for item in navPages %}
    {% if item.for == "Footer" %}
        {% set footerLinks = footerLinks.concat([item]) %}
    {% endif %}
{% endfor %}

<footer class="main-footer stack" style="--spacer:0.25em;">
    <div class="auto-flex button-grid">
        {% for item in buttons.special %}
            {% if item.url -%}
                <a href="{{item.url}}" class="btn">
                    <img src="/public/buttons/{{item.img}}" alt="{{item.title}}" width="88" height="31" class="classic-btn" loading="lazy" decoding="async" eleventy:ignore>
                </a>
            {%- else -%}
                <img src="/public/buttons/{{item.img}}" alt="{{item.title}}" width="88" height="31" class="btn classic-btn" loading="lazy" decoding="async" eleventy:ignore>
            {%- endif -%}
        {% endfor %}
    </div>
    <nav class="auto-flex">
        {% for entry in footerLinks %}
            <a href="{{entry.url}}">{{entry.title}}</a>
        {% endfor %}
    </nav>
    <p>&copy; 2021 - 2025 ReduxFlakes.</p>
    <p>Built with <a href="https://www.11ty.dev/">11ty</a> & procrastination, and hosted for free thanks to <a href="https://neocities.org/">Neocities</a> and <a href="https://nekoweb.org/">Nekoweb</a>.</p>
</footer>