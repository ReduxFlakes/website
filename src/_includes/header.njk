<header class="hero stack" style="--spacer:0.5em;">
    <h1>{{title or meta.title}}</h1>
    {% if description != false %}
        <p>{{description or hero.description or meta.description}}</p>
    {% endif %}
    {% if post or modified %}
        <div class="hero-meta">
            {% if post %}
                <p class="secondary">{%- lucide "calendar-plus" -%} Posted in: <time datetime="{{date}}">{{date | formatPostDate}}</time>
                </p>
            {% endif %}
            {% if modified %}
                <p class="secondary">{%- lucide "file-pen-line" -%} Modified in: <time datetime="{{modified}}">{{modified | formatPostDate}}</time>
                </p>
            {% endif %}
            {% if post %}
                <p class="secondary">{%- lucide "timer" -%} Read time: {{ content | timeToRead }}</p>
            {% endif %}
        </div>
        {% if post and env.environment == "production" %}
            <button class="tinylytics_kudos button--transparent" data-path="{{ page.url }}"></button>
        {% endif %}
        {% if post and tags %}
            <nav>
                {% for item in tags %}
                    <a href="../tag/{{item | slugify }}" class="label">{{item}}</a>
                {% endfor %}
            </nav>
        {% endif %}
    {% endif %}
</header>