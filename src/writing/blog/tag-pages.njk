---
permalink: "/writing/blog/tag/{{ tag | slugify }}/"
pagination: 
    data: collections
    size: 1
    alias: tag
    addAllPagesToCollections: true
eleventyComputed:
    title: "Tagged with: {{ tag }}"
    description: false
    parent: Blog
    key: "{%- if collections[tag].data.parent == 'Blog' -%}{{ tag }}{%- endif -%}"
    excludeFromNav: true
---

{% set taglist = collections[tag] | reverse %}
{% for post in taglist %}
    {{ component('post-listing', {title: post.data.title, date: post.date, description: post.data.description, href: post.url }) }}
{% endfor %}