---js
// <script>
const pagination = {
	data: "collections",
	size: 1,
	alias: "tag",
	filter: ["writings"],
	// addAllPagesToCollections: true,
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
	title: "Tagged '{{ tag }}'",
	permalink: function(data) {
		return `/writings/t/${this.slugify(data.tag)}/`;
	}
};
---
<h1>Tagged “{{ tag }}”</h1>

{% set postslist = collections[tag] %}

<ol reversed class="postlist">
    {%- for post in postslist | reverse %}
        <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
            <a href="{{ post.url }}" class="postlist-link">
                {% if post.data.title %}{{ post.data.title }}
                {% else %}
                    <code>{{ post.url }}</code>
                {% endif %}
            </a>
            <time class="postlist-date" datetime="{{ post.date }}">{{ post.date | formatPostDate }}</time>
        </li>
    {%- endfor %}
</ol>

<p>See <a href="tags.njk">all tags</a>.</p>